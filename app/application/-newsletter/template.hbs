<div class="container">
	<div class="row">			
		<div class="col s12 m8 offset-m2">
			<section id="newsletter" class="newsletter">
				<h4 class="center-align">{Subscribe to our mailing list}</h4>
				<form>
			      <div class="row">
			        <div class="input-field col s12">
			         	<input id="email" type="email" class="validate">
          				<label for="email">Email</label>
			        </div>
			      </div>
			      <div class="row">
			        <div class="input-field col s12">
			          <input id="full_name" type="text" class="validate">
			          <label for="full_name">Full Name</label>
			        </div>
			      </div>
			      <div class="row">
			        <div class="input-field col s12">
			          <input id="country" type="text" class="validate">
			          <label for="country">Country</label>
			        </div>
			      </div>
			      <div class="row">
			        <div class="input-field col s12">
			          	<h6 for="e_format">Email Format</h6>
			          	<p>
					      <input name="e_type" type="radio" id="e_type_1" checked class="with-gap validate"/>
					      <label for="e_type_1">Html</label>
					    </p>
					    <p>
					      <input name="e_type" type="radio" id="e_type_2" class="validate with-gap"/>
					      <label for="e_type_2">Text</label>
					    </p>
			        </div>
			      </div>	
			      <div class="row">
			      	<div class="input-field col s12">		      
			      		<button type="submit" class="btn btn-subscribe">SUBSCRIBE</button>
			      	</div>
			      </div>
			    </form>
			</section>
		</div>
	</div>
</div>