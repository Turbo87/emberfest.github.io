<header>
  <div class="row">
    <div class="small-12 large-12 columns">

      <!-- BEGIN TOP NAV -->
      <nav class="top-bar" data-topbar>
        <ul class="title-area">
          <li class="name">
            <h1>
              {{#link-to "index"}}<img src="/images/logo.png" class="logo">{{/link-to}}
            </h1>
          </li>
          <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
        </ul>

        <section class="top-bar-section">
          <ul class="right">
            {{#if controllers.user.isLoggedIn}}
              <li><a {{action "doLogOut"}}>Sign out</a></li>
            {{else}}
              <li><a {{action "doLogIn"}}>Sign in</a></li>
            {{/if}}
          </ul>

          <ul class="left main-nav">
            <li>{{#link-to "talks"}}Talks{{/link-to}}</li>
            <li>{{#link-to "tickets"}}Tickets{{/link-to}}</li>
            <li>{{#link-to "venue"}}Venue{{/link-to}}</li>
            <li>{{#link-to "partners"}}Partners{{/link-to}}</li>
            <li>{{#link-to "organizers"}}About{{/link-to}}</li>
            <li>{{#link-to "munich"}}2013{{/link-to}}</li>
            {{#if controllers.user.isLoggedIn}}
                <li>{{#link-to "profile"}}Profile{{/link-to}}</li>
            {{/if}}
          </ul>
        </section>
      </nav>
      <!-- END TOP NAV -->

      <!-- BEGIN BANNER -->
      {{#if isOnHome}}
          <div class="banner text-center">
              <h1>The biggest ember.js event in Europe</h1>
              <h2><span style="font-weight: 700">Barcelona</span> 26th &ndash; 29th August 2014</h2>

              {{#link-to "mailinglist" class="button"}}Subscribe{{/link-to}}
              {{#link-to "tickets" class="button"}}Buy tickets{{/link-to}}
          </div>
          <!-- END BANNER -->
      {{else}}
          <div class="nobanner text-center">
          </div>
      {{/if}}


    </div>
  </div>


</header>

<div class="row main-content">
  <div class="small-12 large-12 columns">
    {{outlet}}

  </div>
</div>

